#jenkins stages
#!/usr/bin/env groovy

pipeline {
    agent any
    environment {
        // Jenkins will use the credentials added earlier
        AWS_ACCESS_KEY_ID = credentials('AWS_ACCESS_KEY_ID')
        AWS_SECRET_ACCESS_KEY = credentials('AWS_SECRET_ACCESS_KEY')
        AWS_DEFAULT_REGION = 'ap-south-1'
    }
    stages {
        // Stage 1: Create an EKS Cluster
        stage("Create an EKS Cluster") {
            steps {
                script {
                    dir('eks-cluster') {
                        // Jenkins will run these commands for us
                        sh 'terraform init'
                        sh 'terraform apply -auto-approve'
                    }
                }
            }
        }

        // Stage 2: Deploy to EKS
        stage("Deploy to EKS") {
            steps {
                script {
                    dir('kubernetes') {
                        // Update kubeconfig for access to EKS cluster
                        sh 'aws eks update-kubeconfig --name eks-cluster'
                        
                        // Deploy an application
                        sh 'kubectl apply -f nginx-deployment.yaml'
                        
                        // Deploy a service
                        sh 'kubectl apply -f nginx-service.yaml'
                    }
                }
            }
        }
    }
}
